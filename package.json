{
  "name": "bitcoin-converter",
  "version": "1.0.0",
  "description": "A CLI to convert Bitcoin to any currency provided",
  "main": "index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir bin src",
    "build:watch": "npm run build -- --watch",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --reporter nyan",
    "test:tdd": "npm run test -- --watch",
    "test:coverage": "nyc npm test"
  },
  "preferGlobal": true,
  "bin": {
    "bitcoin-converter": "bin/main.js"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lflimeira/bitcoin-converter.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "lflimeira <lflimeira02@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lflimeira/bitcoin-converter/issues"
  },
  "homepage": "https://github.com/lflimeira/bitcoin-converter#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "mocha": "^5.0.1",
    "node-fetch": "^2.0.0",
    "nyc": "^11.5.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.2",
    "sinon-chai": "^2.14.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1"
  },
  "dependencies": {
    "commander": "^2.15.1"
  }
}
